<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-cfalert-dialog">
  <StackLayout class="p-20">
    <Label text="CFAlert Dialog Demo" class="t-20 text-center c-black" textWrap="true"/>
    <Button text="Show Notification" tap="{{ showNotification }}" />
    <Button text="Show Alert" tap="{{ showAlert }}" />
    <Button text="Show Bottom Sheet" tap="{{ showBottomSheet }}" />
    <Button text="Show Simple List" tap="{{ showSimpleList }}" />
    <Button text="Show Single Choice List" tap="{{ showSingleChoiceList }}" />
    <Button text="Show Multi Choice List" tap="{{ showMultiChoiceList }}" />
  </StackLayout>
</Page>